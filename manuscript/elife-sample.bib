@article{doi:10.1161/01.RES.0000163276.26083.e8,
author = {Bailong Xiao  and Ming Tao Jiang  and Mingcai Zhao  and Dongmei Yang  and Cindy Sutherland  and F. Anthony Lai  and Michael P. Walsh  and David C. Warltier  and Heping Cheng  and S. R. Wayne Chen },
title = {Characterization of a Novel PKA Phosphorylation Site, Serine-2030, Reveals No PKA Hyperphosphorylation of the Cardiac Ryanodine Receptor in Canine Heart Failure},
