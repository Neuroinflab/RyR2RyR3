@article{doi:10.1152/physrev.00022.2021,
author = {Dixon, Rose E. and Navedo, Manuel F. and Binder, Marc D. and Santana, L. Fernando},
title = {Mechanisms and physiological implications of cooperative gating of clustered ion channels},
journal = {Physiological Reviews},
volume = {102},
number = {3},
pages = {1159-1210},
year = {2022},
doi = {10.1152/physrev.00022.2021},
    note ={PMID: 34927454},

