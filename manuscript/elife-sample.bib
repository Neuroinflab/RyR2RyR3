   author = {Huang, Xiaojun and Liu, Ying and Wang, Ruiwu and Zhong, Xiaowei and Liu, Yingjie and Koop, Andrea and Chen, S. R. Wayne and Wagenknecht, Terence and Liu, Zheng},
