@article{BALSHAW200120144,
title = {Calmodulin Binding and Inhibition of Cardiac Muscle Calcium Release Channel (Ryanodine Receptor)*},
journal = {Journal of Biological Chemistry},
volume = {276},
number = {23},
pages = {20144-20153},
year = {2001},
issn = {0021-9258},
doi = {https://doi.org/10.1074/jbc.M010771200},
url = {https://www.sciencedirect.com/science/article/pii/S0021925819404547},
author = {David M. Balshaw and Le Xu and Naohiro Yamaguchi and Daniel A. Pasek and Gerhard Meissner},
abstract = {Metabolically 35S-labeled calmodulin (CaM) was used to determine the CaM binding properties of the cardiac ryanodine receptor (RyR2) and to identify potential channel domains for CaM binding. In addition, regulation of RyR2 by CaM was assessed in [3H]ryanodine binding and single-channel measurements. Cardiac sarcoplasmic reticulum vesicles bound approximately four CaM molecules per RyR2 tetramer in the absence of Ca2+; in the presence of 100 μmCa2+, the vesicles bound 7.5 CaM molecules per tetramer. Purified RyR2 bound approximately four [35S]CaM molecules per RyR tetramer, both in the presence and absence of Ca2+. At least four CaM binding domains were identified in [35S]CaM overlays of fusion proteins spanning the full-length RyR2. The affinity (but not the stoichiometry) of CaM binding was altered by redox state as controlled by the presence of either GSH or GSSG. Inhibition of RyR2 activity by CaM was influenced by Ca2+ concentration, redox state, and other channel modulators. Parallel experiments with the skeletal muscle isoform showed major differences in the CaM binding properties and regulation by CaM of the skeletal and cardiac ryanodine receptors.}
}

